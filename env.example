# 竞品动态监控系统 - 环境配置示例
# 复制此文件为 .env 并填入实际值

# AI服务配置（可选）
# 获取地址：https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# 数据库配置（可选，默认使用SQLite）
DATABASE_URL=sqlite:///instance/competitor_monitor.db

# 应用配置
SECRET_KEY=your_secret_key_here
FLASK_ENV=production
FLASK_DEBUG=False

# 服务器配置
HOST=0.0.0.0
PORT=8080

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 爬虫配置
CRAWL_DELAY_MIN=2
CRAWL_DELAY_MAX=5
CRAWL_TIMEOUT=30

# 定时任务配置
DAILY_CRAWL_HOUR=9
DAILY_CRAWL_MINUTE=0 